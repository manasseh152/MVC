<main>
	<h2>Applicant</h2>
	{{#if applicant}}
		<table>
			<tr>
				<th>Applicant Number</th>
				<th>Gender</th>
				<th>Title</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Nick Name</th>
				<th>Birth Date</th>
				<th>Street</th>
				<th>Number</th>
				<th>Number Extension</th>
				<th>Zip Code</th>
				<th>Place</th>
				<th>Applicant Key</th>
				<th>Is Active</th>
				<th>Description</th>
				<th></th>
				<th></th>
			</tr>
			{{#each applicant}}
				<tr>
					<td>{{this.applicantNumber}}</td>
					<td>{{this.gender}}</td>
					<td>{{this.title}}</td>
					<td>{{this.firstName}}</td>
					<td>{{this.lastName}}</td>
					<td>{{this.nickName}}</td>
					<td>{{this.birthDate}}</td>
					<td>{{this.street}}</td>
					<td>{{this.number}}</td>
					<td>{{this.numberExtension}}</td>
					<td>{{this.zipCode}}</td>
					<td>{{this.place}}</td>
					<td>{{this.applicantkey}}</td>
					<td>{{this.isActive}}</td>
					<td>{{this.description}}</td>
					<td><a href="/applicant/update/{{this.id}}"><img
								src="/static/images/edit.svg"
								alt="update"
							/></a></td>
					<td><a href="/applicant/delete/{{this.id}}"><img
								src="/static/images/delete.svg"
								alt="delete"
							/></a></td>
				</tr>
			{{/each}}
		</table>
	{{else}}
		<p>No applicants found</p>
	{{/if}}
	<a href="/applicant/create">Create applicants</a>
</main>